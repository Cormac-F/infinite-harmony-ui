{% extends "./templates/master.njk" %}

{% block title %}
  Login | Kainos
{% endblock %}

{% block chatbot %}
{% endblock %}

{% block content %}
  <main class="flex-shrink-0 main-container">
    <div class="spec-jobs-container container" id="spec-container">
      <section class="vh-90 gradient-custom">
        <div class="container py-5 h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card text-white shadow" style="border-radius: 1rem">
                <div class="card-body p-5 text-center">
                  <div class="mb-md-5 mt-md-4 pb-5">
                    <div class="mb-5">
                      <img
                        src="../public/images/Kainos-alt-transparent.png"
                        alt="Kainos Logo"
                        width="220"
                        height="70"
                      />
                    </div>
                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                    <p class="text-white-50 pt-2 mb-5">
                      Please enter your email and password!
                    </p>
                    <div class="container">
                      {% if errormessage %}
                      <div
                        id="login-error"
                        class="alert alert-danger"
                        role="alert"
                      >
                        {{ errormessage }}
                      </div>
                      {% endif %}
                    </div>
                    <form action="/login" method="post">
                      <div class="form-outline form-white mb-5">
                        <input
                          type="email"
                          id="username"
                          name="username"
                          class="form-control form-control-lg shadow-sm"
                          placeholder="Email"
                          value="{{ username }}"
                        />
                      </div>
                      <div class="form-outline form-white mt-5 mb-5">
                        <input
                          type="password"
                          id="password"
                          name="password"
                          class="form-control form-control-lg shadow-sm"
                          placeholder="Password"
                        />
                      </div>
                      <button
                        id="btn-login"
                        class="btn-login btn-lg px-5 shadow-sm"
                        type="submit"
                      >
                        Login
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
{% endblock %}